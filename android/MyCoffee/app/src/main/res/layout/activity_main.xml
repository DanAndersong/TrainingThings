<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_margin="20dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:background="@color/black"></ImageView>

    <RelativeLayout
        android:id="@+id/quantity_and_price"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/logo">

        <Button
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/quantity_text_view"
            android:backgroundTint="#964b00"
            android:onClick="incrementCoffeeNumber"
            android:text="+"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-light"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/quantity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="30dp"
            android:text="0"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-light"
            android:textSize="30sp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/quantity_text_view"
            android:backgroundTint="#964b00"
            android:onClick="decrementCoffeeNumber"
            android:text="-"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-light"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/price_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="20dp"
            android:text="$0"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-light"
            android:textSize="30sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/quantity_and_price"
        android:src="@drawable/background_new"

        ></ImageView>
    <Button
        android:layout_below="@id/quantity_and_price"
        android:layout_centerInParent="true"
        android:layout_margin="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#964b00"
        android:onClick="submitOrder"
        android:text="ORDER"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-light"/>

</RelativeLayout>